<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/middle_grey" />
            <stroke android:width="1dp" android:color="@color/middle_grey" /><!--边框颜色-->
        </shape>
    </item>
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp" android:color="@color/middle_grey" /><!--边框颜色-->
        </shape>
    </item>
</selector>