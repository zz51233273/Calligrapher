<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:clipToPadding="true"
            android:fitsSystemWindows="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:fitsSystemWindows="true">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/back"
                    android:gravity="bottom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="今日活动"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:gravity="bottom"
                    android:textSize="19sp"/>
                <ImageView
                    android:id="@+id/action_inf"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/more_inform"/>
            </FrameLayout>
        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:id="@+id/action_score"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/action_score_bg">
            <TextView
                android:id="@+id/day_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日练点：0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="@color/default_grey"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/week_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周练点：0"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:textColor="@color/default_grey"
                android:textSize="18sp"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/action1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/setting_activity_bg"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登门造访"
                android:textColor="@color/default_grey"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/action1_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成度：0/1"
                android:textColor="@color/default_grey"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/action2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/setting_activity_bg"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="勤学苦练"
                android:textColor="@color/default_grey"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/action2_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成度：0/15"
                android:textColor="@color/default_grey"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/action3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/setting_activity_bg"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="乐于助人"
                android:textColor="@color/default_grey"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/action3_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成度：0/1"
                android:textColor="@color/default_grey"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/action4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/setting_activity_bg"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="陶冶情操"
                android:textColor="@color/default_grey"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/action4_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成度：0/2"
                android:textColor="@color/default_grey"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/action5"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/setting_activity_bg"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="广为流传"
                android:textColor="@color/default_grey"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/action5_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成度：0/1"
                android:textColor="@color/default_grey"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>