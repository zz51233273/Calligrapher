<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/user_info_bg">
        <circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/h_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:src="@drawable/personal_photo"
            app:border_width="2dp"
            app:border_color="#ccc"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_below="@id/h_head"
            android:gravity="center"
            android:text="佩奇侠"/>
        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:layout_below="@id/user_name"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/follow_info"/>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_below="@id/user_info"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:background="@drawable/setting_message_circle_left"
                android:id="@+id/rb_follow"
                style="@style/tab_message_item"
                android:text="关注" />
            <TextView
                android:background="@drawable/setting_message_circle_right"
                android:id="@+id/rb_letter"
                style="@style/tab_message_item"
                android:text="私信" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rg_tab_bar"
            android:background="@color/middle_grey"/>
        <RadioGroup
            android:id="@+id/rg_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_about"
                style="@style/tab_userinfo_item"
                android:text="关于Ta" />

            <RadioButton
                android:id="@+id/rb_dynamic"
                style="@style/tab_userinfo_item"
                android:text="动态" />
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/middle_grey"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>