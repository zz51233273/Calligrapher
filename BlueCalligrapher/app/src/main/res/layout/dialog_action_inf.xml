<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/actions_bg"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/get_text_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="获取方式"
            android:textColor="@color/default_grey"
            android:textSize="22sp"/>
        <TextView
            android:layout_below="@id/get_text_inf"
            android:id="@+id/get_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/default_grey"
            android:textSize="21sp"/>
        <TextView
            android:layout_below="@+id/get_text"
            android:id="@+id/value_text_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="兑换细则"
            android:textColor="@color/default_grey"
            android:textSize="22sp"/>
        <TextView
            android:layout_below="@+id/value_text_inf"
            android:id="@+id/value_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/default_grey"
            android:textSize="21sp"/>
        <TextView
            android:layout_below="@id/value_text"
            android:id="@+id/restting_text_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="重置时间"
            android:textColor="@color/default_grey"
            android:textSize="22sp"/>
        <TextView
            android:layout_below="@id/restting_text_inf"
            android:id="@+id/restting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/default_grey"
            android:textSize="21sp"/>
        <Button
            android:layout_below="@id/restting_text"
            android:id="@+id/ok"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/action_btn_bg"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="知 晓"
            android:textSize="20sp"
            android:textColor="@color/default_grey" />
    </RelativeLayout>
</LinearLayout>