<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/actions_bg">
        <TextView
            android:id="@+id/misson_text"
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxEms="10"
            android:singleLine="false"
            android:text="完成每日签到"
            android:textColor="@color/default_grey"
            android:textSize="21sp"/>
        <TextView
            android:layout_below="@id/misson_text"
            android:id="@+id/value_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="(+5日练点)"
            android:textColor="@color/default_grey"
            android:textSize="19sp"/>
        <Button
            android:layout_below="@id/value_text"
            android:id="@+id/ok"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/action_btn_bg"
            android:gravity="center"
            android:text="知 晓"
            android:textSize="20sp"
            android:textColor="@color/default_grey" />
    </RelativeLayout>

</LinearLayout>