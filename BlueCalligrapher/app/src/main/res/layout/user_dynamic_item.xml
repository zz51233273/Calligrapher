<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_item_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/personal_photo"
            app:border_width="1dp"
            app:border_color="#ccc"/>
        <TextView
            android:id="@+id/main_item_writer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/main_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:textColor="@color/dark_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/img0"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <ImageView
                android:id="@+id/img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <!--第三四五张图片-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/img5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/main_item_good"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/love"
            />
        <TextView
            android:id="@+id/main_item_good_number"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:textSize="16sp"
            android:textColor="@color/dark_grey"
            android:layout_marginLeft="5dp"
            android:text="赞"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/main_item_preview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/preview"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/main_item_preview_number"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="评论"
            android:textColor="@color/dark_grey"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/main_item_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete_img"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/main_item_delete_number"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:text="删除"
            android:textColor="@color/dark_grey"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>